&GLOBAL
  PROJECT  G0W0_H2O_PBE_periodic
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
     THRESHOLD 0.01
  &END
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  HFX_BASIS
    SORT_BASIS EXP
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    &MGRID
      CUTOFF  100
      REL_CUTOFF  20
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
    &END QS
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-7
      MAX_SCF 100
      &PRINT
        &RESTART OFF
        &END
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
        &PBE
          SCALE_X 1.0000000
          SCALE_C 1.0000000
        &END
      &END XC_FUNCTIONAL
      &WF_CORRELATION
        &LOW_SCALING
          MEMORY_CUT 1
        &END
        &RI_RPA
          &HF
            FRACTION 1.0000000
            &SCREENING
              EPS_SCHWARZ 1.0E-6
              SCREEN_ON_INITIAL_P FALSE
            &END SCREENING
          &END HF
          RPA_NUM_QUAD_POINTS     10
          &GW
            CORR_MOS_OCC          4
            CORR_MOS_VIRT         4
            ANALYTIC_CONTINUATION TWO_POLE
            CROSSING_SEARCH       Z_SHOT
            RI_SIGMA_X            FALSE
            PERIODIC
            &PERIODIC
              # That value should be chosen much larger !
              NUM_OMEGA_POINTS   5
            &END
          &END GW
        &END RI_RPA
        MEMORY  200.
        NUMBER_PROC  1
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  7.500   7.500  7.500
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET          DZVP-GTH
      BASIS_SET RI_AUX   RI_DZVP-GTH
      BASIS_SET AUX_GW   DZVP-GTH
      POTENTIAL  GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET          DZVP-GTH
      BASIS_SET RI_AUX   RI_DZVP-GTH
      BASIS_SET AUX_GW   DZVP-GTH
      POTENTIAL  GTH-PBE-q6
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  H2O_gas.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
