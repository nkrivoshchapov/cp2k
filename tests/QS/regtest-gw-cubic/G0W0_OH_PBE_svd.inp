&GLOBAL
  PROJECT  G0W0_OH_PBE_svd
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
     THRESHOLD 0.01
  &END
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    UKS
    MULTIPLICITY 2
    BASIS_SET_FILE_NAME  HFX_BASIS
    SORT_BASIS EXP
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    &MGRID
      CUTOFF  100
      REL_CUTOFF  20
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-7
      MAX_SCF 100
      &PRINT
        &RESTART OFF
        &END
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
        &PBE
          SCALE_X 1.0000000
          SCALE_C 1.0000000
        &END
      &END XC_FUNCTIONAL
      &WF_CORRELATION
        &INTEGRALS
          ERI_METHOD OS
        &END
        &LOW_SCALING
          MEMORY_CUT 1
        &END LOW_SCALING
        &RI_RPA
          &HF
            FRACTION 1.0000000
            &SCREENING
              EPS_SCHWARZ 1.0E-8
              SCREEN_ON_INITIAL_P FALSE
            &END SCREENING
          &END HF
          RPA_NUM_QUAD_POINTS 20
          &GW
            CORR_MOS_OCC          10
            CORR_MOS_VIRT         10
            ANALYTIC_CONTINUATION TWO_POLE
            NUMB_POLES            2
            CROSSING_SEARCH       Z_SHOT
            FERMI_LEVEL_OFFSET    2.0E-2
            EV_GW_ITER            1
            RI_SIGMA_X            FALSE
          &END GW
        &END RI_RPA
        MEMORY  200.
        NUMBER_PROC  1
        &RI
          DO_SVD
          EPS_SVD 1.0E-5
        &END RI
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  8.000   8.000  8.000
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-PBE-q6
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  OH_radical_gas.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
