      &KERNEL
         &XC_FUNCTIONAL 
            &LIBXC 
               FUNCTIONAL GGA_C_PBE 
            &END LIBXC 
            &LIBXC 
               FUNCTIONAL GGA_X_PBE 
               SCALE 0.75 
            &END LIBXC
         &END XC_FUNCTIONAL
         &EXACT_EXCHANGE
            FRACTION 0.25
         &END EXACT_EXCHANGE
      &END KERNEL
    &END XAS_TDP
  &END DFT
  &SUBSYS
    &CELL
      ABC  6.0  6.0  6.0
      PERIODIC NONE
    &END CELL
    &COORD
      C  0.00000    0.00000     1.12832
      O  0.00000    0.00000     0.00000
    &END COORD
    &KIND C
      BASIS_SET 3-21G*
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET 3-21G*
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
